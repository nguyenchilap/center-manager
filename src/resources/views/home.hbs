<script>
    document.addEventListener('DOMContentLoaded', function(){
        btnSignIn = document.querySelector('.navbar__btn-sign-in');
        btnSignUp = document.querySelector('.navbar__btn-sign-up');
        btnSwitchModal = document.querySelectorAll('.btn-switch-modal');
        btnCloseModal = document.querySelectorAll('.btn-close-modal');
        btnViewDetails = document.querySelectorAll('.course-item__button-view');
        btnCommitSignUp = document.querySelector('.modal__sign-up-btn-submit');

        inputPassword = document.querySelector('#sign-up__password');
        inputConfirmPassword = document.querySelector('#sign-up__confirm-password');

        modalCourseDetails = document.querySelector('.modal__course-detail');
        modalSignIn = document.querySelector('.modal__sign-in');
        modalSignUp = document.querySelector('.modal__sign-up');

        //sign-in clicked
        btnSignIn.onclick = () => {
          modalSignIn.style.display = 'block';
        }

        //sign-up clicked
        btnSignUp.onclick = () => {
          modalSignUp.style.display = 'block';
        }

        //switch modal
        btnSwitchModal.forEach(element => {
          element.onclick = () => { 
            if (element.innerHTML == 'Sign in') {
              modalSignIn.style.display = 'block';
              modalSignUp.style.display = 'none';
            }
            if (element.innerHTML == 'Sign up'){
              modalSignUp.style.display = 'block';
              modalSignIn.style.display = 'none';
            }
          }
        });

        //close modal 
        btnCloseModal.forEach(element => {
          element.onclick = () => {
            modalSignIn.style.display = 'none';
            modalSignUp.style.display = 'none';
            modalCourseDetails.style.display = 'none';
          }
        });

        //View Course Details : 
        btnViewDetails.forEach(element => {
          element.onclick = () => {
            modalCourseDetails.style.display = 'block';
          }
        })

        //Sign-up submit clicked
        btnCommitSignUp.onclick = (e) => {
          if (inputPassword.value != inputConfirmPassword.value){
            alert('Mật khẩu khác nhận không khớp !!!!');
            e.preventDefault();
          }
        }
    })

</script>